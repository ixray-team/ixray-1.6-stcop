VERSION = BCB.03
# ---------------------------------------------------------------------------
PROJECT = elpkdbB3.bpl
OBJFILES = Source\ElDBBoxes.obj Source\ElDBBtnEdit.obj Source\ElDBCtrls.obj \
  Source\ElDBCurrEdit.obj Source\ElDBDTPick.obj Source\ElDBHTMLView.obj \
  Source\ElDBLbl.obj Source\ElDBSpin.obj elpkdbB3.obj
RESFILES = elpkdbB3.res
DEFFILE =
RESDEPEN = $(RESFILES)
LIBFILES =
LIBRARIES =
SPARELIBS = VCL35.lib
PACKAGES = vclx35.bpi VCL35.bpi VCLDB35.bpi elpackB3.bpi
# ---------------------------------------------------------------------------
PATHCPP = .;
PATHASM = .;Source
PATHPAS = .;Source
PATHRC = .;
DEBUGLIBPATH = $(BCB)\lib\debug
RELEASELIBPATH = $(BCB)\lib\release
# ---------------------------------------------------------------------------
CFLAG1 = -O2 -Hc -w -Ve -k- -vi -c -b- -w-par -w-inl -Vx
CFLAG2 = -D_RTLDLL;USEPACKAGES -Isource;$(BCB)\include;$(BCB)\include\vcl \
  -H=$(BCB)\lib\vcl35.csm
CFLAG3 = -Tkh30000 -4
PFLAGS = -Usource;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) \
  -D_RTLDLL;USEPACKAGES -Isource;$(BCB)\include;$(BCB)\include\vcl -$L- -$I- -$D- \
  -$C- -v -JPHN -M
RFLAGS = -D_RTLDLL;USEPACKAGES -isource;$(BCB)\include;$(BCB)\include\vcl
AFLAGS = /isource /i$(BCB)\include /i$(BCB)\include\vcl /d_RTLDLL /dUSEPACKAGES /mx /w2 \
  /zn
LFLAGS = -Lsource;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) \
  -D"EldoS DB-Aware Controls" -aa -Tpp -Gpr -x -Gn -Gl -Gi
IFLAGS =
# ---------------------------------------------------------------------------
ALLOBJ = c0pkg32.obj $(PACKAGES) sysinit.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES) $(LIBRARIES) import32.lib cp32mti.lib
# ---------------------------------------------------------------------------
